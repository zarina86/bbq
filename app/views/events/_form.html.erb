<%= form_for(@event, data: { turbo: false } ) do |f| %>
  <%= render partial: 'partials/form_errors', locals: { model: @event } %>

  <div class="form-group">
    <%= f.label :title %>
    <%= f.text_field :title, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :address %>
    <%= f.text_field :address, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :datetime %>
    <p><%= f.datetime_select :datetime, class: 'form-control' %></p>
  </div>

  <div class="form-group">
    <div class="buffer-bottom">
      <%= f.label :description %>
      <%= f.text_area :description, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <div class="buffer-bottom">
      <%= f.label :pincode %>
      <%= f.text_field :pincode, class: 'form-control' %>
    </div>
  </div>

  <div class="actions">
    <div class="buffer-bottom">
      <%= f.submit I18n.t('button.save'), class: 'btn btn-primary' %>
      или <%= link_to I18n.t('button.back'), :back, class: 'btn btn-secondary' %>
    </div>
  </div>
<% end %>
