<% unless current_user_can_edit?(comment) %>
  <h1><%= I18n.t('controllers.event_mailer.comment.title') %></h1>
  <p><%= @comment.body %></p>
  <p><%= I18n.t('controllers.event_mailer.comment.author') %>: <strong><%= @comment.user_name %></strong></p>

  <hr/>

  <%= I18n.t('controllers.event_mailer.comment.event') %>
  <h3><%= @event.title %></h3>

  <%= I18n.t('controllers.event_mailer.comment.datetime') %>
  <h4><%= l @event.datetime %></h4>

  <%= I18n.t('controllers.event_mailer.comment.owner') %>
  <h4><%= @event.user.name %></h4>
<% end %>