<h2>Регистрация</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), data: {turbo: false})  do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="buffer-bottom-forms">
    <div class="row">
      <div class="col-7">
        <%= f.label :Email, class:"label-custom" %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
      </div>
    </div>
  </div>
  
  <div class="buffer-bottom-forms">
    <div class="row">
      <div class="col-7">
        <%= f.label :name, class:"label-custom" %><br />
        <%= f.text_field :name, autofocus: true, autocomplete: "name", class: "form-control" %>
      </div>
    </div>
  </div>

  <div class="buffer-bottom-forms">
    <div class="row">
      <div class="col-7">
        <%= f.label :password, class:"label-custom" %>
        <% if @minimum_password_length %>
        <em>(не менее <%= @minimum_password_length %> символов)</em>
        <% end %><br />
        <%= f.password_field :password, autocomplete: "password", class: "form-control" %>
      </div>
    </div>
  </div>
  
  <div class="buffer-bottom-forms">
    <div class="row">
      <div class="col-7">
        <%= f.label :password_confirmation, class:"label-custom" %>
        <br />
        <%= f.password_field :password_confirmation, autocomplete: "password_confirmation",  class: "form-control"%>
      </div>
    </div>
  </div>

  <div class="actions">
    <%= f.submit I18n.t('button.sign_up'), class:"btn btn-primary" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
