<h2>Войти</h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name), data: {turbo: false}) do |f| %>
    
  <div class="buffer-bottom-forms">
    <div class="row">
      <div class="col-7">
        <%= f.label :Email, class:"label-custom" %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
      </div>
    </div>
  </div>

  <div class="buffer-bottom-forms">
    <div class="row">
      <div class="col-7">
        <%= f.label :"Пароль", class:"label-custom" %><br />
        <%= f.password_field :password, autocomplete: "current-password", class: "form-control" %>
        <div class="form-text">Длина пароля должна быть не менее 6 символов</div>
      </div>
    </div>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="buffer-bottom-forms">
      <div class="field">
        <%= f.check_box :remember_me %>
        <%= f.label :"Запомнить меня" %>
      </div>
    </div>
  <% end %>

  <div class="actions">
    <%= f.submit "Войти", class: "btn btn-primary btn" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
