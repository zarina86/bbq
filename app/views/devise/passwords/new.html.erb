<h2><%= t('.forgot_your_password') %></h2>

<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }, data: {turbo: false}) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="buffer-bottom-forms">
    <div class="row">
      <div class="col-7">
        <%= f.label :Email, class:"label-custom" %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
      </div>
    </div>
  </div>

  <div class="actions">
    <%= f.submit t('.send_me_reset_password_instructions'), class: "btn btn-primary btn" %>
  </div>
  
<% end %>

<%= render "devise/shared/links" %>
